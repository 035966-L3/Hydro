{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "composite": true,
        "declaration": true,
        "sourceMap": true,
        "strictBindCallApply": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "**/__mocks__",
        "bin",
        "dist"
    ]
}